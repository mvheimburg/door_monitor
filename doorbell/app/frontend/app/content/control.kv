<HouseCard>:
    orientation: "vertical"
    MDLabel:
        id: houselabel
        halign: "center"
        text: root.name
        user_font_size: 60
    HouseButton:
        id: housebutt
        pos_hint: {'center_x': 0.5}
        # halign: "center"
        on_release: app.toggle_state()
        user_font_size: 60


<DoorCard>:
    orientation: "vertical"
    MDLabel:
        id: doorlabel
        halign: "center"
        text: root.pretty
        user_font_size: 60
    DoorButton:
        id: doorbutt
        pos_hint: {'center_x': 0.5}
        # halign: "center"
        on_release: root.toggle_door()
        user_font_size: 60


