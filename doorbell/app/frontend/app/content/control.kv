<DoorCard>:
    orientation: "vertical"
    MDLabel:
        id: doorlabel
        halign: "center"
        text: root.name
        user_font_size: 60
    DoorButton:
        id: doorbutt
        pos_hint: {'center_x': 0.5}
        # halign: "center"
        on_release: app.toggle_door(root.name, self.locked)
        user_font_size: 60


