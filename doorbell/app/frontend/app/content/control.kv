<Control>:
    id: control
    MDBoxLayout:
        orientation: "horizontal"
        MDFloatLayout:
            id: unit_control_box
            size_hint: None, None
            width: root.LEFT_BOX_WIDTH
            height: root.SCREEN_HEIGHT
            MDBoxLayout:
                # id: garage_box
                orientation: "vertical"
                MDBoxLayout:
                    # id: garage_box
                    orientation: "horizontal"
                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint_x: 0.1
                        adaptive_height: True
                        MDIconButton:
                            pos_hint: {'center_y': .5}
                            action: "clear"
                            icon: "backspace-outline"
                            on_release: app.log_out("DoorBell")  
                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint_x: 0.9
                        adaptive_height: True

                        MDIconButton:
                            pos_hint: {'center_y': .5}
                            icon: "arrow-up-bold-circle"
                            on_release: app.garage_open()
                            user_font_size: 60
                        MDIconButton:
                            pos_hint: {'center_y': .5}
                            icon: "stop-circle"
                            on_release: app.garage_stop()
                            user_font_size: 60
                        MDIconButton:
                            pos_hint: {'center_y': .5}
                            icon: "arrow-down-bold-circle"
                            on_release: app.garage_close()
                            user_font_size: 60

                MDBoxLayout:
                    id: door_box
                    orientation: "horizontal"
                    # size_hint: None, None
                    # width: root.RIGHT_BOX_WIDTH
                    # height: root.SCREEN_HEIGHT



                    # MDBoxLayout:
                    #     orientation: "horizontal" 

                    DoorCard:
                        controller: control
                        name: "garage"
                        # name: app.get_name_by_id(self.id)
                        pretty: "Garasje"
                    
                    DoorCard:
                        controller: control
                        name: "main"
                        # name: app.get_name_by_id(self.id)
                        pretty: "Hoved d√∏r"
                        size_fac: 2
                    
                    DoorCard:
                        controller: control
                        name: "workshop"
                        # name: app.get_name_by_id(self.id)
                        pretty: "Verksted"


        MDFloatLayout:
            id: unit_control_box
            size_hint: None, None
            width: root.RIGHT_BOX_WIDTH
            height: root.SCREEN_HEIGHT
            MDBoxLayout:
                orientation: "vertical"
                adaptive_size: True
                pos_hint: {'center_x': .5, 'center_y': .5}
                                        
                HouseCard:
                    controller: control
                    id: hc
