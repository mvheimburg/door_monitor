#: import ew kivy.uix.effectwidget


# <CarouselWithDoubleTap>:
    


<DoorBell>:
    id: doorbell
    MDBoxLayout:
        id: bellbox
        opacity: 1
        MDFloatLayout:
            size_hint: None, None
            width: root.LEFT_BOX_WIDTH
            height: root.SCREEN_HEIGHT
            id: carousel_container

            # Image:
            #     source: 'frontend/assets/familie/1.png'
            CarouselWithDoubleTap:
                controller: doorbell

        MDFloatLayout:
            size_hint: None, None
            width: root.RIGHT_BOX_WIDTH
            height: root.SCREEN_HEIGHT
            canvas.before:
            Color:
                rgba: app.kelvin(3000)
            Rectangle:
                pos: self.pos
                size: self.size

            MDIconButton:
                id: bellbutton
                # icon: "account-circle"
                icon: 'bell'
                user_font_size: "120sp"
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                # md_bg_color: app.theme_cls.primary_color
                # md_bg_color: app.azure
                on_press: app.ring_bell()



    MDBoxLayout:
        id: loginbox
